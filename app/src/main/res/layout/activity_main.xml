<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tv_tampilan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELAMAT DATANG \nDi APLIKASI HOSPITALKU"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_marginTop="60dp" />
    <TextView
        android:id="@+id/tv_ket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Aplikasi Rumah Sakit Swasta dan Umum \nDi Kota Palembang"
        android:layout_below="@+id/tv_tampilan"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:justificationMode="inter_word"
        />
    <Button
        android:id="@+id/btn_Swasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rumah Sakit Swasta"
        android:layout_below="@+id/tv_ket"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/btn_umum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rumah Sakit Swasta"
        android:layout_below="@+id/btn_Swasta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true" />

</RelativeLayout>